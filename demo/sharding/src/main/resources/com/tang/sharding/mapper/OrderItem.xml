<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tang.sharding.mapper.OrderItemMapper">

    <insert id="save" parameterType="com.tang.sharding.model.OrderItem">
        INSERT INTO t_order_item(order_id,
                                  user_id,
                                  brand_name,
                                  product_name,
                                  order_date,
                                  pay_date,
                                  total_price,
                                  discount,
                                  pay_price)
                          VALUES(#{orderId},
                                  #{userId},
                                  #{brandName},
                                  #{productName},
                                  #{orderDate},
                                  #{payDate},
                                  #{totalPrice},
                                  #{payDiscount},
                                  #{payPrice});
    </insert>

</mapper>